<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendlyitsolution.meet.rest_app.home"
    tools:showIn="@layout/activity_home">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resturent open"
        android:id="@+id/onoff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"

        android:background="@drawable/butnclick_off"/>
<RelativeLayout
    android:id="@+id/rel2"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/onoff"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black_off"
        android:layout_centerVertical="true"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Request"
        android:id="@+id/pen"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/leftbutton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted Request"
       android:id="@+id/acp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"

        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rightbutton"/>
</RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recy"
    android:layout_margin="10dp"
    android:layout_below="@+id/rel2"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
